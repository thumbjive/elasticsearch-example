      <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :article_title, size: 80 %>
  </div>

  <div class="field">
    <%= form.label :abstract %>
    <%= form.text_area :abstract, id: :article_abstract, cols: 80, rows: 5 %>
  </div>

  <div class="field">
    <%= form.label :url %>
    <%= form.text_field :url, id: :article_url, size: 80 %>
  </div>

  <div class="field">
    <%= form.label :published_on %>
    <%= form.date_select :published_on, id: :article_published_on %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
